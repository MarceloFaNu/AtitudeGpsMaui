<?xml version="1.0" encoding="UTF-8" ?>
<Shell  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        xmlns:pages="clr-namespace:AtitudeGpsMauiApp.Pages"
        x:Class="AtitudeGpsMauiApp.AppShell"
        Shell.FlyoutBehavior="Disabled">

    <Shell.TabBarBackgroundColor>Black</Shell.TabBarBackgroundColor>
    <Shell.TabBarTitleColor>RoyalBlue</Shell.TabBarTitleColor>
    <Shell.TabBarUnselectedColor>Grey</Shell.TabBarUnselectedColor>
    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate pages:MainPage}"
            Route="MainPage" />
        <ShellContent
            Title="Opções"
            ContentTemplate="{DataTemplate pages:ConfigPage}"
            Route="Config" />
        <ShellContent
            Title="Copiloto"
            ContentTemplate="{DataTemplate pages:Copiloto}"
            Route="Copiloto" />
    </TabBar>

</Shell>
